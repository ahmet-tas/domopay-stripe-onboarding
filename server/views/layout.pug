doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no')
    title domopay
    link(rel='stylesheet', type='text/css', href='/stylesheets/domopay.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Barlow:500,600')
    link(rel='icon', type='image/png', sizes='64x64', href='/images/favicon.png')

  body
    header
      #top
        if serviceVendor
          .logo
            a.rocketrides.mark(href='/')
          .links
            if serviceVendor.stripeAccountId && serviceVendor.onboardingComplete
              a(href='/serviceVendors/dashboard') Dashboard
            a(href='/serviceVendors/logout') Abmelden
        else
          .logo
            a.rocketrides(href='/')
          .links
            a(href='/serviceVendors/login') Log in
      block header

    #content
      block content

    footer
      block footer

    script(src='/javascripts/domopay.js')
